<% @posts.each do |post| %>
  	<h1><%= link_to post.title, post %></h1>
    <h3><%= post.blurb %></h3>
    <%= post.link %>
    <p>Submitted <strong><%= time_ago_in_words(post.created_at) %></strong> ago</p>

    <h3><%= post.comments.count %> Comments</h3>
   
     <button class: "btn btn-default btn-lg"><%= post.category.name %></button>
      <%= image_tag post.avatar.url(:thumb) %>
      <br>
    <%= link_to like_post_path(post), method: :put do %>
      Upvote <%= post.get_upvotes.size %>
    <% end %>
    <%= link_to dislike_post_path(post), method: :put do %>
      Downvote <%= post.get_downvotes.size %>
    <% end %>
    <hr>
<% end %>